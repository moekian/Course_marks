<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".Activities.MainActivity">

    <TableRow
        android:layout_margin="5dp"
        android:id="@+id/row1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Data base:"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Data base"
            android:id="@+id/java"
            android:layout_weight="1"/>

    </TableRow>
    <TableRow
        android:layout_margin="5dp"
        android:id="@+id/row2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Java:"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="java"
            android:id="@+id/db"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow
        android:layout_margin="5dp"
        android:id="@+id/row3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Swift:"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="java"
            android:id="@+id/swift"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow
        android:layout_margin="5dp"
        android:id="@+id/row4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="iOS:"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="java"
            android:id="@+id/ios"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow
        android:layout_margin="5dp"
        android:id="@+id/row5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Android:"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="java"
            android:id="@+id/android"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow
        android:layout_margin="5dp"
        android:id="@+id/row6">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIN"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AVG"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAX"/>
    </TableRow>


</TableLayout>